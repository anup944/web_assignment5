<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects - WEB322 Assignment</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <!-- Include Navbar -->
  <%- include('partials/navbar', {page: '/solutions/projects'}) %>
  
  <!-- Hero Section -->
  <div class="hero bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Projects</h1>
        <p class="py-6">Browse our completed projects by sector</p>
        <div class="flex flex-wrap gap-2 justify-center">
          <a href="/solutions/projects" class="btn btn-primary">All Projects</a>
          <a href="/solutions/projects?sector=ind" class="btn btn-outline btn-primary">Industry</a>
          <a href="/solutions/projects?sector=gov" class="btn btn-outline btn-primary">Government</a>
          <a href="/solutions/projects?sector=edu" class="btn btn-outline btn-primary">Education</a>
          <a href="/solutions/projects?sector=trans" class="btn btn-outline btn-primary">Transportation</a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Projects Table -->
  <div class="container mx-auto p-4">
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% if (projects && projects.length > 0) { %>
            <% projects.forEach(project => { %>
              <tr>
                <td><%= project.title %></td>
                <td>
                  <% 
                    let sectorParam = '';
                    if (project.sector === 'Industry') sectorParam = 'ind';
                    else if (project.sector === 'Government') sectorParam = 'gov';
                    else if (project.sector === 'Education') sectorParam = 'edu';
                    else if (project.sector === 'Transportation') sectorParam = 'trans';
                  %>
                  <a href="/solutions/projects?sector=<%= sectorParam %>" class="btn btn-sm">
                    <%= project.sector %>
                  </a>
                </td>
                <td><%= project.summary_short %></td>
                <td>
                  <a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-outline">details</a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">No projects found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- Include Footer -->
  <%- include('partials/footer') %>
</body>
</html>